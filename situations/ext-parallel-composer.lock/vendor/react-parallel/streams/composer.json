{
    "name": "react-parallel/streams",
    "description": "\ud83c\udfde\ufe0f Streams abstraction around ext-parallel Channels for ReactPHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Cees-Jan Kiewiet",
            "email": "ceesjank@gmail.com",
            "homepage": "http://wyrihaximus.net/"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-parallel": "*",
        "react-parallel/event-loop": "^2.0.0",
        "react/event-loop": "^1.5",
        "react/promise": "^2.11 || ^3.1"
    },
    "require-dev": {
        "react-parallel/stubs": "^1.2",
        "wyrihaximus/async-test-utilities": "^5 || ^7.3",
        "wyrihaximus/ticking-promise": "^3"
    },
    "autoload": {
        "psr-4": {
            "ReactParallel\\Streams\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReactParallel\\Tests\\Streams\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "icanhazstring/composer-unused": true,
            "infection/extension-installer": true
        },
        "platform": {
            "php": "8.1.13"
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "composer normalize"
        ],
        "post-update-cmd": [
            "composer normalize"
        ]
    }
}
